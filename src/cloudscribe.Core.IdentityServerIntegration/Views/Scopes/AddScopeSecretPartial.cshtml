@model cloudscribe.Core.IdentityServerIntegration.Models.NewScopeSecretViewModel
@using cloudscribe.Core.IdentityServerIntegration
@using cloudscribe.Web.Pagination
@using Microsoft.Extensions.Localization
@addTagHelper "*, cloudscribe.Web.Pagination"
@inject IStringLocalizer<CloudscribeIntegration> sr
<form class="form-inline" asp-controller="Scopes" asp-action="AddScopeSecret">
    <div class="form-group">
        <label asp-for="Value"></label>
        <input class="form-control" asp-for="Value">
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <input class="form-control" asp-for="Type" />
    </div>
    <div class="form-group">
        <label asp-for="Expiration"></label>
        <input class="form-control" asp-for="Expiration" />
    </div>
    <input asp-for="SiteId" type="hidden" />
    <input asp-for="ScopeName" type="hidden" />
    <button type="submit" class="btn btn-default">Add Secret</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
