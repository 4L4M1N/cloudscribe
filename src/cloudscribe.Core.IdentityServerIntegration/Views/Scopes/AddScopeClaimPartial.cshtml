@model cloudscribe.Core.IdentityServerIntegration.Models.NewScopeClaimViewModel
@using cloudscribe.Core.IdentityServerIntegration
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<CloudscribeIntegration> sr
<form class="form-inline" asp-controller="Scopes" asp-action="AddScopeClaim">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="checkbox">
        <label>
            <input asp-for="AlwaysIncludeInIdToken"> @sr["Always Include In Id Token"]
        </label>
    </div>
    <input asp-for="SiteId" type="hidden" />
    <input asp-for="ScopeName" type="hidden" />
    <button type="submit" class="btn btn-default">Add Claim</button>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
