@model cloudscribe.Core.IdentityServerIntegration.Models.ScopeEditViewModel
@using cloudscribe.Core.IdentityServerIntegration
@using cloudscribe.Web.Pagination
@using Microsoft.Extensions.Localization
@addTagHelper "*, cloudscribe.Web.Pagination"
@inject IStringLocalizer<CloudscribeIntegration> sr

@if (Model.CurrentScope == null)
{
    <h2>@sr["New Scope"]</h2>

}
else
{
    <h2>@sr["Edit Scope"] @Model.CurrentScope.Name</h2>

    <ul class="">
    @foreach (var c in Model.CurrentScope.Claims)
    {
        <li>@c.Name - @c.Description</li>
    }
    </ul>

    <ul class="">
        @foreach (var s in Model.CurrentScope.ScopeSecrets)
        {
            <li>@s.Type - @s.Description - @s.Expiration</li>
        }
    </ul>

}
