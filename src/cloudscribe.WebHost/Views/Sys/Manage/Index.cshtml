@using cloudscribe.Resources
@model cloudscribe.Core.Web.ViewModels.SiteUser.AccountIndexViewModel
@{
    ViewBag.Title = CommonResources.Manage;
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>@CommonResources.ChangeYourAccountSettings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@CommonResources.Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink(@CommonResources.ChangeYourPassword, "ChangePassword")
            }
            else
            {
                @Html.ActionLink(@CommonResources.Create, "SetPassword")
            }
            ]
        </dd>
        <dt>@CommonResources.ExternalLogins:</dt>
        <dd>
            @Model.Logins.Count [
            @Html.ActionLink(@CommonResources.Manage, "ManageLogins") ]
        </dd>
        @*
            Phone Numbers can used as a second factor of verification in a two-factor authentication system.
             
             See <a href="http://go.microsoft.com/fwlink/?LinkId=313242">this article</a>
                for details on setting up this ASP.NET application to support two-factor authentication using SMS.
             
             Uncomment the following block after you have set up two-factor authentication
        *@
        @*  
            <dt>@CommonResources.PhoneNumber:</dt>
            <dd>
                @(Model.PhoneNumber ?? "None") [
                @if (Model.PhoneNumber != null)
                {
                    @Html.ActionLink(@CommonResources.Change, "AddPhoneNumber")
                    @: &nbsp;|&nbsp;
                    @Html.ActionLink(@CommonResources.Remove, "RemovePhoneNumber")
                }
                else
                {
                    @Html.ActionLink(@CommonResources.Add, "AddPhoneNumber")
                }
                ]
            </dd>
        *@
        <dt>@CommonResources.TwoFactorAuthentication:</dt>
        <dd>
            <p>
                There are no two-factor authentication providers configured. See <a href="http://go.microsoft.com/fwlink/?LinkId=313242">this article</a>
                for details on setting up this ASP.NET application to support two-factor authentication.
            </p>
            @*@if (Model.TwoFactor)
                {

                    <form method="post" action="/Manage/DisableTwoFactorAuthentication">
                        @CommonResources.Enabled
                        <input type="submit" value="Disable" class="btn btn-link" />
                    </form>
                }
                else
                {

                    <form method="post" action="/Manage/EnableTwoFactorAuthentication">
                        @CommonResources.Disabled
                        <input type="submit" value="Enable" class="btn btn-link" />
                    </form>
                }*@
        </dd>
    </dl>
</div>
