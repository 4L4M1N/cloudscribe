@model cloudscribe.Core.Web.ViewModels.Account.EditUserViewModel
@{

}
@section Styles {
    @Styles.Render("~/Content/themes/base/all.css")
    @Styles.Render("~/Scripts/timepicker/jquery-ui-timepicker-addon.css")
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("UserEdit", "UserAdmin", FormMethod.Post, 
    new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserId)
    if (Model.UserId > -1)
    {
        <div class="form-group">
            @Html.LabelFor(m => m.UserId, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.Label("UserId", Model.UserId.ToInvariantString(), new { @class = "control-label" })
            </div>
        </div>
    }
    @Html.Partial("EditUserPartial", Model)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="@CommonResources.Save" />
        </div>
    </div>
    @Html.ValidationSummary("", new { @class = "text-danger" })
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/timepicker/jquery-ui-timepicker-addon.js")
    @if (System.Globalization.CultureInfo.CurrentUICulture.Name != "en-US")
    {
        @Scripts.Render("~/Scripts/jqueryui-i18n/datepicker-" + System.Globalization.CultureInfo.CurrentUICulture.Name + ".js")
        @Scripts.Render("~/Scripts/timepicker/i18n/jquery-ui-timepicker-" + System.Globalization.CultureInfo.CurrentUICulture.Name + ".js")
    }
    @Scripts.Render("~/Scripts/cloudscribe-datepicker-unobtrusive.js")
}
