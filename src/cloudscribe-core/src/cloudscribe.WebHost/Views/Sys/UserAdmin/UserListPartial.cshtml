@model cloudscribe.Core.Web.ViewModels.UserAdmin.UserListViewModel

@{
    
}

@if (Model.ShowAlphaPager)
{
    <div>
        @Html.AlphabeticPager(Model.AlphaQuery,
            "ABCDEFGHIJKLMNOPQRSTUVWXYZ",
            null,
            "CommonResources.All",
            "",
            false,
            x => Url.Action("Index", new { query = x })
    )
    </div>
}

<table class="table table-striped">
    <tr>
        <th>
            <a class="btn btn-xs btn-default" asp-action="UserEdit" asp-controller="UserAdmin">CommonResources.NewUser</a> 
        </th>
        <th>
            CommonResources.Email
        </th>
        <th>
            CommonResources.LoginName
        </th>
        <th>
            CommonResources.DisplayName
        </th>
        <th>
            CommonResources.FirstName
        </th>
        <th>
            CommonResources.LastName
        </th>
        
    </tr>

    @foreach (var item in Model.UserList)
    {
        <tr>
            <td>
                <a class="btn btn-xs btn-default" asp-action="UserEdit"
                   asp-controller="UserAdmin"
                   asp-route-userId="@item.UserId">CommonResources.Manage</a> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
                
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            
        </tr>
    }

</table>
