@model cloudscribe.Core.Web.ViewModels.CoreData.GeoCountryViewModel

@{
    
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">  
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })   
        @Html.HiddenFor(model => model.Guid)     
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ISOCode2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ISOCode2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ISOCode2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ISOCode3, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ISOCode3, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ISOCode3, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@CommonResources.Save" class="btn btn-default" />
                @if (Model.Guid != Guid.Empty)
                {
                    <button name="button" type="button" class="btn btn-default"
                            onclick="javascript: if(confirm('@Html.FormatValue(Model.Name, CommonResources.ConfirmDeleteCountryFormat)')) {$('#deleteform').submit();}">
                        @CommonResources.Delete
                    </button>
                }
            </div>
        </div>
    </div>
}
@if (Model.Guid != Guid.Empty)
{
    using (Html.BeginForm("CountryDelete", "CoreData", FormMethod.Post, new { @id = "deleteform", @class = "form-inline" }))
    { @Html.AntiForgeryToken()
        @Html.Hidden("countryGuid", Model.Guid)
        @Html.Hidden("returnPageNumber", Model.ReturnPageNumber)

    }
}
<div>
    @Html.ActionLink(@CommonResources.BackToCountryList, "CountryListPage",
            new { pageNumber = Model.ReturnPageNumber },
                new { @class = "btn btn-default" })
</div>
